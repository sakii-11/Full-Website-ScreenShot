{
  "manifest_version": 3,
   "name": "WebsiteCapture",
   "version": "1.0",
   "description": "Take a full webpage page screenshot or screen record and download it as JPEG, PDF or video.",
   "permissions" : ["activeTab", "scripting", "downloads", "tabs"],
   "host_permissions": ["<all_urls>"],
   "background": {
    "service_worker": "background.js"
   },
   "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
   }

}